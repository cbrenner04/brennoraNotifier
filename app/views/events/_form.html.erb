<%= form_for @event, url: url, class: "form-horizontal" do |f| %>
  <%= render "shared/alert", invalid_object: @event, name: "event" %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :occurs_at, class: "col-sm-2 control-label" %>
    <%= f.datetime_select :occurs_at %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", events_path, class: "btn btn-secondary" %>
<% end %>

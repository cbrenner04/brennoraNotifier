<% breadcrumb :edit_guest, @guest.event, @guest %>

<h1>Edit <%= @guest.full_name %></h1>

<%= form_for @guest, url: event_guest_path(@guest.event, @guest), class: "form-horizontal" do |f| %>
  <%= render "shared/alert", invalid_object: @guest, name: "guest" %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: "col-sm-2 control-label" %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :notification_category, class: "col-sm-2 control-label" %>
    <%= f.select :notification_category, [:text, :email, :both], {}, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", event_guests_path(@guest.event) %>
<% end %>

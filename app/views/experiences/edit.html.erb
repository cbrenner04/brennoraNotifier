<% breadcrumb :edit_experience, @experience.event, @experience %>

<h1>Edit <%= @experience.name %></h1>

<%= form_for @experience, url: event_experience_path(@experience.event, @experience), class: "form-horizontal" do |f| %>
  <%= render "shared/alert", invalid_object: @experience, name: "experience" %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :occurs_at, class: "col-sm-2 control-label" %>
    <%= f.datetime_select :occurs_at %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", event_experiences_path(@experience.event) %>
<% end %>

  <div class="card">
    <div class="card-header" id="heading-<%= experience.id %>">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-<%= experience.id %>" aria-expanded="false" aria-controls="collapse-<%= experience.id %>">
          <%= experience.name %>
        </button>
      </h5>
    </div>
    <div id="collapse-<%= experience.id %>" class="collapse" aria-labelledby="heading-<%= experience.id %>" data-parent="#accordion">
      <div class="card-body">
        <div class="row">
          <div class="col-6 col-lg-3 text-center">
            <%= experience.occurs_at.strftime('%m/%d/%Y %I:%M %P') %>
          </div>
          <div class="col-6 col-lg-3 text-center">
            <%= experience.time_to_send_notification.strftime('%m/%d/%Y %I:%M %P') %>
          </div>
          <div class="col-6 col-lg-4 text-center">
            <%= link_to "Notification", event_experience_notification_path(@event, experience, experience.notification) %>
          </div>
          <div class="col-6 col-lg-2 text-center">
            <%= link_to "", edit_event_experience_path(@event, experience), class: "fa fa-pencil" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

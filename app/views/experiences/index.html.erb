<% breadcrumb :experiences, @event %>

<h1><%= @event.name %> Experiences</h1>

<div class="mb-3">
  <%= link_to "Add", new_event_experience_path(@event) %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date/Time</th>
      <th>Notification Time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @event.experiences.each do |experience| %>
      <tr>
        <td><%= experience.name %></td>
        <td><%= experience.occurs_at.strftime('%m/%d/%Y %I:%M %P') %></td>
        <td><%= experience.time_to_send_notification.strftime('%m/%d/%Y %I:%M %P') %></td>
        <td><%= link_to "Notification", event_experience_notification_path(@event, experience, experience.notification) %></td>
        <td><%= link_to "", edit_event_experience_path(@event, experience), class: "fa fa-pencil" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

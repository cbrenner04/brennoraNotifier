<% breadcrumb :notification, @event, @experience, @notification %>

<h1>Notification for <%= @experience.name %></h1>

<div class="mb-3">
  <%= link_to "Edit", edit_event_experience_notification_path(@event, @experience, @notification) %>
</div>

<h2>SMS Body</h2>
<div class="card mb-3">
  <div class="card-body">
    <%= @notification.sms_body %>
  </div>
</div>

<h2>Email Body</h2>
<div class="card mb-3">
  <div class="card-body">
    <%= simple_format(@notification.email_body) %>
  </div>
</div>

<h2>Guests</h2>

<div class="mb-3">
  <%= link_to "Add guests", new_event_experience_notification_guests_notification_path(@event, @experience, @notification) %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Notification Type</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @guests_notifications.each do |guests_notification| %>
      <%= render "notifications/guest", event: @event, guests_notification: guests_notification, guest: guests_notification.guest %>
    <% end %>
  </tbody>
</table>
